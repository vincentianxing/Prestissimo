<div class="add_reply">

	<!-- Edit comment form -->
	<%= form_for :comment, url: reply_comment_path(@comment.commentable_type.underscore, @comment.commentable_id.to_s, @comment.id), remote: true, method: 'post' do |f| %>
		<!-- Comment Label -->
		<%= f.label :body, "Reply as #{current_handle.username}", id: "reply_label" %>
		<!-- Comment Body -->
		<%= f.text_area :body, value: "", class: "inputfield_alt1", id: "reply_textarea"  %>

		<!-- Submit Button -->
		<div id="reply_submit_box">
			<%= f.submit "Reply", id: "submit_comment" %>
		</div>

	<% end %>
</div>
