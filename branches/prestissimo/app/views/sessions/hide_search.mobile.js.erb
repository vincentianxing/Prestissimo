// ajax to hide or show the search help box

if (<%= !cookies[:hide_search].nil? %>){
	$('#search_help').addClass('start_hidden');
	$('#hide_show_search').text('Show search help');
}
else{
	$('#search_help').removeClass('start_hidden');
	$('#hide_show_search').text('Hide');
}

$('#status_bar').text("");
	


