// ajax to hide or show the search help box


//If the cookie exists, we hide the box when the user visits the course search page.
//The text on the button changes to reflect what will happen if the user clicks on it.
if (<%= !cookies[:hide_search].nil? %>){
	$('#search_help').addClass('start_hidden');
	$('#hide_show_search').text('Show search help');
}
else{
	$('#search_help').removeClass('start_hidden');
	$('#hide_show_search').text('Hide');
}

//Get rid of "Loading..." status bar
$('#status_bar').text("");
	


