<header>
<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
<div id="header" data-role="header">
  <%= image_tag("new_prestissimo_logo.png", alt: "Log in!", id: "logo") %>
  <span id="menu_button" data-role="button" data-theme="b" data-icon="arrow-d" data-iconpos="right">Links</span>
  <ul data-role="menu">
    <li>
    <ul id="menu_list" data-role="listview" data-inset="true">
      <li><%= link_to "Home", root_path%></li>
      <% if signed_in? %>
      <li><%= link_to "Profile", current_user%></li>
      <li><%= link_to "Search Course Catalog", root_path %></li>
      <li><%= link_to "Search People", users_path %></li>
      <li><%= link_to "Search Departments and Classes", hubcourses_path %></li>
      <li><%= link_to "Settings", settings_path(current_user) %></li>
      <li><%= link_to "Sign Out", signout_path, method: "delete" %></li>
      <% else %>
      <li><%= link_to "Sign In", signin_path %></li>
      <% end %>
      <% if current_user && current_user.admin? %>
      <li><%= link_to "Admin", admin_page_path %></li>
      <% end %>
      <li><%= link_to "Help", help_path%></li>
      <li><%= link_to "About", about_path %></li>
    </ul>
    </li>
  </ul>
  <div style="clear:both;"></div>

</div>
</header>
